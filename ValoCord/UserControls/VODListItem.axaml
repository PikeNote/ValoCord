<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ValoCord.ViewModels"
             mc:Ignorable="d" d:DesignWidth="778" d:DesignHeight="99"
             x:Class="ValoCord.UserControls.VODListItem"
             x:DataType="viewModels:VODListItemViewModel" Height="99">
    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="VALORANT"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>    
        <Style Selector="StackPanel.HitStat > StackPanel > TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>    
        
        <Style Selector="StackPanel.HitStat > StackPanel > Border">
            <Setter Property="Width" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>    
    </UserControl.Styles>
    <Border Background="#211F1F" CornerRadius="10">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="228"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Width="6" VerticalAlignment="Stretch" Background="#7AC343" CornerRadius="10 0 0 10"/>
            <Border Grid.Column="1" Width="230" VerticalAlignment="Stretch" ClipToBounds="True">
                <Grid>
                    <Image
                        Source="{Binding MapImage}"
                        Stretch="UniformToFill"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch" 
                    />
                    <Rectangle
                        Fill="#80000000"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
                    
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center" TextAlignment="Center" Classes="h2" Text="{Binding Score}"/>
                </Grid>
            </Border>
            <Grid Grid.Column="2" Margin="10 10 30 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0">
                    <Run Text="{Binding MapName}"/>
                    <Run Text=" ("/>
                    <Run Text="{Binding GameMode}"/>
                    <Run Text=" )"/>
                </TextBlock>
                <TextBlock Grid.Row="1" Text="{Binding Date}"/>
                <StackPanel  Grid.Row="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Image Source="{Binding AgentIcon}" Width="37" RenderOptions.BitmapInterpolationMode="LowQuality"/>
                    <Border CornerRadius="25" Height="22" Width="80" Background="#C3C750">
                        <TextBlock TextAlignment="Center" Text="{Binding Standing}"/>
                    </Border>
                    <TextBlock  Foreground="White" VerticalAlignment="Center" Text="{Binding CombatScore}"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Column="3" Classes = "HitStat" Margin="10" HorizontalAlignment="Center" >
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Border>
                        <Svg Path="/Assets/SVG/Person/Head.svg" Width="17"/>
                    </Border>
                    <TextBlock
                        Text="HEAD:"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Text="{Binding Path=HeadPecentage}"
                        VerticalAlignment="Center"
                        Foreground="LightGray"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Border>
                        <Svg Path="/Assets/SVG/Person/Body.svg" Width="37"/>
                    </Border>
                    <TextBlock
                        Text="BODY:"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Text="{Binding Path=BodyPercentage}"
                        VerticalAlignment="Center"
                        Foreground="LightGray"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Border>
                        <Svg Path="/Assets/SVG/Person/Legs.svg" Width="28"/>
                    </Border>
                    <TextBlock
                        Text="LEGS:"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Text="{Binding Path=LegPercentage}"
                        VerticalAlignment="Center"
                        Foreground="LightGray"/>
                </StackPanel>
            </StackPanel>
            <TextBlock Grid.Column="4" VerticalAlignment="Bottom" Margin= "10" Text="{Binding Date}"/>
        
        </Grid>
    </Border>
</UserControl>
